<?xml version="1.0"?>
<ruleset name="TAIPO Project Standard">
    <description>A TAIPO projekt kódolási szabályzata.</description>

    <rule ref="PSR12"/>

    <file>./src</file>
    <file>./public</file>

    <exclude-pattern>*/tools/*</exclude-pattern>
    <exclude-pattern>*/assets/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <arg name="colors"/>
    <arg value="p"/>
</ruleset>
